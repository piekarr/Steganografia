@model Steganografia.ViewModels.Home.ConversationMessageViewModel

<div class="message" data-message-id="@Model.Id">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">
                @Model.CreatedByUser
            </h3>
        </div>
        <div class="panel-body">
            @Model.Content
        </div>
        <div class="panel-footer">
            @Model.CreatedDate
        </div>
    </div>
</div>