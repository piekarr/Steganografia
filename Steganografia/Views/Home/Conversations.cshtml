@model IEnumerable<Steganografia.ViewModels.Home.ConversationViewModel>

<h2>Conversations</h2>
<div class="conversationList">
	@if (Model.Any())
	{
	<div class="list-group">
		@foreach (var conversation in Model)
		{
		<button type="button" class="list-group-item" data-conversation-id="@conversation.Id">
			@if (conversation.UnreadMessages > 0)
			{
			<span class="badge">@(conversation.UnreadMessages > 9 ? "9+" : conversation.UnreadMessages.ToString())</span>
			}
			@conversation.Name
		</button>
		}
	</div>
	}
	else
	{
	<div class="alert alert-info" role="alert">There are no conversations.</div>
	}
</div>

<p>
	@Html.ActionLink("Create New", "Create")
</p>


